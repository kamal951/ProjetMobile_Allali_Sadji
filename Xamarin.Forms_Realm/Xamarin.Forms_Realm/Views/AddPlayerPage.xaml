<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin.Forms_Realm.Views.AddPlayerPage"
             Title="Ajout nouveau joueur">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sauver"
                     Icon="ic_save.png"
                     Command="{Binding SavePlayerCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>

        <StackLayout>

            <Label Text="{Binding TeamName, StringFormat='Nouveau joueur dans l\'Ã©quipe : {0}'}"
                   Margin="4,12,4,4" />

            <Entry Placeholder="Nom du joueur"
                   Text="{Binding Name}"
                   Margin="4" />

            <Entry Placeholder="Position"
                   Text="{Binding Position}"
                   Margin="4" />

			<Entry Keyboard="Numeric"
				   Placeholder="Numero"
                   Text="{Binding JerseyNumber}"
                   Margin="4" />

        </StackLayout>

    </ContentPage.Content>
</ContentPage>
